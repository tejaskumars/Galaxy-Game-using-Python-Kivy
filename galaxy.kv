
#:import menu menu


MainWidget:



<MainWidget>:
    canvas.before:
        Rectangle:
            size : self.size
            source : 'images/bg1.jpg'
    menu_widget : menu_widget 
    perspective_point_x: self.width/2
    perspective_point_y: self.height*0.75
    MenuWidget:
        id: menu_widget 
    Label:
        text : root.score_txt
        font_size: dp(30)
        font_name: 'font/Eurostile.ttf'
        size_hint: .2 ,.2
        pos_hint: {"x": 0, "top": 1}
    Label:
        text : root.highscore_txt
        font_size: dp(30)
        font_name: 'font/Eurostile.ttf'
        size_hint: .2 ,.2
        pos_hint: {"x": .75, "top": 1}
    Label:
        text : root.newhighscore_txt
        font_size: dp(30)
        font_name: 'font/Eurostile.ttf'
        size_hint: .2 ,.2
        pos_hint: {"x": .4, "top": .3}
